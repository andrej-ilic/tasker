<div class="row">
  <div class="col-lg-3">
    <div class="card">
      <div class="card-body">
        <h3 class="mb-0">{{user.name}}</h3>
        <h4 class="font-weight-light mb-3">{{user.username}}</h4>
        <p class="font-weight-light my-3">{{user.biography}}</p>
        <a href="#" id="addBioButton" class="btn btn-secondary btn-sm btn-block" onclick="addBio()">
          {{#if user.biography}}
          Edit bio
          {{else}}
          Add bio
          {{/if}}
        </a>
        {{> _bioAddForm}}
      </div>
    </div>
  </div>
  <div class="col-lg-9">

  </div>
</div>