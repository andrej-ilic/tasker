<div class="row">

  <div class="col-lg-3">
    <div class="card mb-3">
      <div class="card-body">
        <h3 class="mb-0">{{userProfile.name}}</h3>
        <h4 class="font-weight-light mb-3">{{userProfile.username}}</h4>
        <p class="font-weight-light" id="bio">{{userProfile.biography}}</p>
        {{#if isPersonalPage}}
        <a href="#" id="addBioButton" class="btn btn-secondary btn-sm btn-block" onclick="addBio()">
          {{#if userProfile.biography}}
          Edit bio
          {{else}}
          Add bio
          {{/if}}
        </a>
        {{> _bioAddForm}}
        {{/if}}
      </div>
    </div>
  </div>

  <div class="col-lg-9">

    <div class="card mb-3">
      <div class="card-body">
        <h4 class="mb-3"><a href="/tasks">{{#if isPersonalPage}}My latest tasks{{else}}Latest tasks{{/if}}</a></h4>
        <ul class="mb-0 list-group">
          {{#if personalTasks.todo}}
            {{#each personalTasks.todo}}
              {{#if isFinished}}
              {{else}}
              <a class="list-group-item list-group-item-action list-group-item-{{color}} py-2" {{#if ../isPersonalPage}}href="/tasks#task{{id}}"{{/if}}>
                {{#if title}}
                <span class="font-weight-bold">{{title}}</span> -
                {{/if}}
                {{content}}
              </a>
              {{/if}}
            {{/each}}
          {{else}}
          <li class="list-group-item">You don't have any tasks</li>
          {{/if}}
        </ul>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <h4 class="mb-3"><a href="/tasks">{{#if isPersonalPage}}My finished tasks{{else}}Finished tasks{{/if}}</a></h4>
        <ul class="mb-0 list-group">
          {{#if personalTasks.finished}}
            {{#each personalTasks.finished}}
              {{#if isFinished}}
              <a class="list-group-item list-group-item-action list-group-item-{{color}} py-2" {{#if ../isPersonalPage}}href="/tasks#task{{id}}"{{/if}}>
                {{#if title}}
                <span class="font-weight-bold">{{title}}</span> -
                {{/if}}
                {{content}}
              </a>
              {{/if}}
            {{/each}}
          {{else}}
          <li class="list-group-item">You haven't finished any tasks.</li>
          {{/if}}
        </ul>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <h4 class="mb-3">
          <a href="/groups">{{#if isPersonalPage}}My groups{{else}}Groups{{/if}}</a>
        </h4>
        {{> _groupListGroup}}
      </div>
    </div>

  </div>
</div>