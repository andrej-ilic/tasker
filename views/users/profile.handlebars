<div class="row">
  <div class="col-lg-3">
    <div class="card mb-3">
      <div class="card-body">
        <h3 class="mb-0">{{user.name}}</h3>
        <h4 class="font-weight-light mb-3">{{user.username}}</h4>
        <p class="font-weight-light my-3">{{user.biography}}</p>
        <a href="#" id="addBioButton" class="btn btn-secondary btn-sm btn-block" onclick="addBio()">
          {{#if user.biography}}
          Edit bio
          {{else}}
          Add bio
          {{/if}}
        </a>
        {{> _bioAddForm}}
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card mb-3">
      <div class="card-body">
        <h4 class="mb-3"><a href="/tasks">My latest tasks</a></h4>
        <ul class="mb-0 list-group">
          {{#if todoTasks}}
            {{#each todoTasks}}
              {{#if isFinished}}
              {{else}}
              <a class="list-group-item list-group-item-action list-group-item-{{color}}" href="/tasks#task{{id}}">
                {{#if title}}
                <span class="font-weight-bold">{{title}}</span> -
                {{/if}}
                {{content}}
              </a>
              {{/if}}
            {{/each}}
          {{else}}
          <li class="list-group-item">You don't have any tasks</li>
          {{/if}}
        </ul>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <h4 class="mb-3"><a href="/tasks">My finished tasks</a></h4>
        <ul class="mb-0 list-group">
          {{#if finishedTasks}}
            {{#each finishedTasks}}
              {{#if isFinished}}
              <a class="list-group-item list-group-item-action list-group-item-{{color}}" href="/tasks#task{{id}}">
                {{#if title}}
                <span class="font-weight-bold">{{title}}</span> -
                {{/if}}
                {{content}}
              </a>
              {{/if}}
            {{/each}}
          {{else}}
          <li class="list-group-item">You haven't finished any tasks.</li>
          {{/if}}
        </ul>
      </div>
    </div>
  </div>
</div>