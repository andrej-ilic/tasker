<h3 class="my-3 mt-4">{{group.name}}</h3>
<button type="button" class="btn btn-primary mb-2" data-toggle="modal" data-target="#taskAddModal">Add task</button>
{{> _taskAddModal}}
<hr>
{{#if tasks}}
<div class="row">
  {{!-- Tasks to do --}}
  <div class="col-sm-6">
    <h4>To do</h4>
    {{#each tasks}}
    {{#if isFinished}}
    {{else}}
    <div class="card mb-2">
      <div class="card-body" id="{{id}}">
        {{#if title}}
        <h5 class="card-title">{{title}}</h5>
        {{/if}}
        <p class="card-text">{{content}}</p>
        <button type="button" class="btn btn-sm btn-secondary" data-toggle="modal" data-target="#taskEditModal{{id}}">Edit</button>
        {{> _taskEditModal}}
        <a href="/tasks" class="btn btn-sm btn-success float-right" onclick="finishTask({{id}})">Finish</a>
        <a href="/tasks" class="btn btn-sm btn-danger" onclick="deleteTask({{id}})">Delete</a>
      </div>
    </div>
    {{/if}}
    {{/each}}
  </div>
  {{!-- Finished tasks --}}
  <div class="col-sm-6">
    <h4>Finished</h4>
    {{#each tasks}}
    {{#if isFinished}}
    <div class="card mb-2">
      <div class="card-body">
        {{#if title}}
        <h5 class="card-title">{{title}}</h5>
        {{/if}}
        <p class="card-text">{{content}}</p>
        <a href="/tasks" class="btn btn-secondary btn-sm" onclick="undoTask({{id}})">Undo</a>
        <a href="/tasks" class="btn btn-danger btn-sm float-right" onclick="deleteTask({{id}})">Delete</a>
      </div>
    </div>
    {{else}}
    {{/if}}
    {{/each}}
  </div>
</div>
{{else}}
<p>You don't have any tasks. Create one by clicking on the 'Add task' button.</p>
{{/if}}