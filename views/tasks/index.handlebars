<h3 class="my-3 mt-4"><a href="/users/me">{{group.name}}</a></h3>
<button type="button" class="btn btn-primary mb-2" data-toggle="modal" data-target="#taskAddModal">Add task</button>
{{> _taskAddModal}}
<hr>
{{#if tasks}}
<div class="row mb-5">
  {{!-- Tasks to do --}}
  <div class="col-sm-6 mb-4">
    <h4>To do</h4>
    {{#each tasks}}
    {{#if isFinished}}
    {{else}}
    {{#if color}}
    <div class="card mb-2 border-{{color}}" id="task{{id}}">
      {{#if title}}
      <h5 class="card-header bg-{{color}}">{{title}}</h5>
      {{/if}}
      {{else}}
      <div class="card mb-2" id="task{{id}}">
        {{#if title}}
        <h5 class="card-header">{{title}}</h5>
        {{/if}}
        {{/if}}
        <div class="card-body">
          <p class="card-text">{{content}}</p>
          <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#taskEditModal{{id}}">Edit</button>
          {{> _taskEditModal}}
          <a href="/tasks" class="btn btn-sm btn-outline-success float-right" onclick="finishTask({{id}})">Finish</a>
          <a href="/tasks" class="btn btn-sm btn-outline-danger" onclick="deleteTask({{id}})">Delete</a>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </div>
    {{!-- Finished tasks --}}
    <div class="col-sm-6">
      <h4>Finished</h4>
      {{#each tasks}}
      {{#if isFinished}}
      {{#if color}}
      <div class="card mb-2 border-{{color}}" id="task{{id}}">
        {{#if title}}
        <h5 class="card-header bg-{{color}}">{{title}}</h5>
        {{/if}}
        {{else}}
        <div class="card mb-2" id="task{{id}}">
          {{#if title}}
          <h5 class="card-header">{{title}}</h5>
          {{/if}}
          {{/if}}
          <div class="card-body">
            <p class="card-text">{{content}}</p>
            <a href="/tasks" class="btn btn-outline-secondary btn-sm" onclick="undoTask({{id}})">Undo</a>
            <a href="/tasks" class="btn btn-outline-danger btn-sm float-right" onclick="deleteTask({{id}})">Delete</a>
          </div>
        </div>
        {{else}}
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{else}}
<p>You don't have any tasks. Create one by clicking on the 'Add task' button.</p>
{{/if}}