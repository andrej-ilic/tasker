<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" id="usersInGroup">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Users in group </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="list-group">
          {{#each users}}
          <div class="list-group-item {{#if isOwner}}list-group-item-secondary{{/if}}">
            <a href="/users/{{id}}">{{name}} <span class="font-weight-light">({{username}})</span></a>
            {{#if ../viewerIsOwner}}
              {{#if isOwner}}
              {{else}}
              <button type="button" class="close" onclick="removeUserFromGroup({{id}}, {{../group.id}}, {{../viewerIsOwner}})">
                <span aria-hidden="true">&times;</span>
              </button>
              {{/if}}
            {{else}}
              {{#if isAuthenticatedUser}}
              <button type="button" class="close" onclick="removeUserFromGroup({{id}}, {{../group.id}}, {{../viewerIsOwner}})">
                <span aria-hidden="true">&times;</span>
              </button>
              {{/if}}
            {{/if}}
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>