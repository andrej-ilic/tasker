<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" id="taskEditModal{{id}}">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit a task</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="editForm{{id}}">
        <div class="modal-body">
          <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" placeholder="(optional)" value="{{title}}">
          </div>
          <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" name="content" required>{{content}}</textarea>
          </div>
          {{> _colorPicker}}
          <input type="hidden" name="groupId" value="{{group.id}}">
        </div>
        <div class="modal-footer">
          <button class="btn btn-outline-danger" data-dismiss="modal">Close</button>
          <a href="#" class="btn btn-success" onclick="editTask({{id}})">Apply changes</a>
        </div>
      </form>
    </div>
  </div>
</div>