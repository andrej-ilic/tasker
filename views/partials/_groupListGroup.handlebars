<div class="list-group mt-3">
  {{#if usersGroups}}
    {{#each usersGroups}}
    <a href="/groups/{{id}}" class="list-group-item list-group-item-action align-items-center">
      {{name}}
      {{#if primaryCount}}<span class="badge badge-primary badge-pill ml-1 font-weight-normal">{{primaryCount}}</span>{{/if}}
      {{#if successCount}}<span class="badge badge-success badge-pill ml-1 font-weight-normal">{{successCount}}</span>{{/if}}
      {{#if dangerCount}}<span class="badge badge-danger badge-pill ml-1 font-weight-normal">{{dangerCount}}</span>{{/if}}
      {{#if warningCount}}<span class="badge badge-warning badge-pill ml-1 font-weight-normal">{{warningCount}}</span>{{/if}}
      {{#if infoCount}}<span class="badge badge-info badge-pill ml-1 font-weight-normal">{{infoCount}}</span>{{/if}}
      {{#if colorlessCount}}<span class="badge badge-light badge-pill ml-1 font-weight-normal">{{colorlessCount}}</span>{{/if}}
    </a>
    {{/each}}
  {{else}}
  <li class="list-group-item">{{#if isPersonalPage}}You are{{else}}{{userProfile.name}} is{{/if}} not a part of any groups.</li>
  {{/if}}
</div>